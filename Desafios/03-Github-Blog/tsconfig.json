{
  "compilerOptions": {
    // Define a versão do ECMAScript para a qual o código será compilado
    "target": "ES2020",
    // Habilita o uso da sintaxe de definição para campos de classe
    "useDefineForClassFields": true,
    // Lista de bibliotecas incluídas no ambiente de execução
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // Define o formato do módulo que será usado
    "module": "ESNext",
    // Ignora a verificação de bibliotecas
    "skipLibCheck": true,

    /* Modo do Bundler */
    // Define o modo de resolução de módulo como "bundler"
    "moduleResolution": "bundler",
    // Permite a importação de extensões .ts
    "allowImportingTsExtensions": true,
    // Permite a importação de módulos JSON
    "resolveJsonModule": true,
    // Habilita a compilação em módulos isolados
    "isolatedModules": true,
    // Não gera arquivos de saída durante a compilação
    "noEmit": true,
    // Define a sintaxe JSX como "react-jsx"
    "jsx": "react-jsx",

    /* Linting */
    // Habilita o modo estrito de verificação
    "strict": true,
    // Reporta erros para variáveis locais não utilizadas
    "noUnusedLocals": true,
    // Reporta erros para parâmetros não utilizados
    "noUnusedParameters": true,
    // Reporta erros para casos em que há uma queda de caso não intencional em um switch
    "noFallthroughCasesInSwitch": true
  },
  // Lista de arquivos e/ou diretórios a serem incluídos no processo de compilação
  "include": ["src"],
  // Referência a outros projetos que devem ser construídos em conjunto
  "references": [{ "path": "./tsconfig.node.json" }]
}
